{
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^test/utils(.*)$": "<rootDir>/test/utils/$1"
  },
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$"
}
