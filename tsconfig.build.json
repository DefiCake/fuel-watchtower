{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "tests",
    "dist",
    "hardhat.config.ts",
    "contracts",
    "hardhat/**/*",
    "src/**/*.spec.ts",
    "deploy/**/*"
  ]
}
